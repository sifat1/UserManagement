@model UserManagement.ViewModels.LoginViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Login" asp-controller="Account" method="post" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="test@example.com" title="Enter your email address" />
                <span asp-validation-for="Email" class="invalid-feedback"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="password" title="Enter your password" />
                <span asp-validation-for="Password" class="invalid-feedback"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="RememberMe" class="form-check-input" title="Check to stay signed in" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">Sign In</button>
            </div>
        </form>
        <div class="row mt-6">
            <div class="col-md-6">
                <p>Don't have an account? <a asp-action="Register" asp-controller="Account">Sign up</a></p>
            </div>
            <div class="col-md-6 text-end">
                <p><a asp-action="ForgotPassword" asp-controller="Account">Forgot password?</a></p>
        </div>
    </div>
    <div class="col-md-6 d-none d-md-block text-center">
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
